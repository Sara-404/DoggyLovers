<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemMpPcard"
        android:layout_width="160dp"
        android:layout_height="230dp"
        android:backgroundTint="@color/colorSurface"
        android:focusable="true"
        app:cardElevation="@android:dimen/app_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/itemMpLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="KeyboardInaccessibleWidget">

            <ImageView
                android:id="@+id/itemMpPimagenProducto"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/imagen_de_producto"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/itemMpPtituloProducto"
                style="@style/txtViewMediano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:clickable="true"
                tools:ignore="KeyboardInaccessibleWidget"
                tools:text="Champú perros" />

            <TextView
                android:id="@+id/itemMpPdescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeTextType="uniform"
                android:lines="2"
                android:maxLines="3"
                android:textAlignment="center"
                tools:text="Un champú para lavarlos a todos" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>