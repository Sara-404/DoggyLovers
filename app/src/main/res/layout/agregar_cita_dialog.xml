<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/txtTituloDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="@string/dia_y_hora_de_la_cita" />

    <EditText
        android:id="@+id/acdEdtTxtSeleccionarFecha"
        style="@style/editTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autofillHints="datetime"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/fecha"
        android:inputType="none"
        tools:ignore="KeyboardInaccessibleWidget" />

    <EditText
        android:id="@+id/acdEdtTxtSeleccionarHora"
        style="@style/editTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autofillHints="datetime"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/hora"
        android:inputType="none"
        tools:ignore="KeyboardInaccessibleWidget" />

    <TextView
        style="@style/txtViewMediano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/descripcion_cita" />

    <EditText
        android:id="@+id/acdEdtTxtDescripcionCita"
        style="@style/editTxt"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autofillHints="txt"
        android:hint="@string/descripcion" />

    <TextView
        style="@style/txtViewMediano"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/pregunta_recordatorio" />

    <Switch
        android:id="@+id/acdSwtchRecordatorio"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <EditText
        android:id="@+id/acdEdtTxtFechaRecordatorio"
        style="@style/editTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autofillHints="datetime"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/fecha"
        android:inputType="none"
        android:visibility="invisible"
        tools:ignore="KeyboardInaccessibleWidget" />

    <EditText
        android:id="@+id/acdEdtTxtHoraRecordatorio"
        style="@style/editTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autofillHints="datetime"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/hora"
        android:inputType="none"
        android:visibility="invisible"
        tools:ignore="KeyboardInaccessibleWidget" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/acdBtnCancelar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/cancelar"
            android:textColor="@color/colorSecondary" />

        <Button
            android:id="@+id/acdBtnAceptar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/aceptar" />

    </LinearLayout>


</LinearLayout>